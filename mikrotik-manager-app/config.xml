<?xml version='1.0' encoding='utf-8'?>
<widget id="com.mikrotik.manager" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>MikroTik Manager</name>
    <description>
        Mobilná aplikácia pre správu MikroTik zariadení
    </description>
    <author email="admin@mikrotik.manager" href="https://mikrotik.manager">
        MikroTik Manager Team
    </author>
    <content src="index.html" />
    
    <!-- Allow network access -->
    <access origin="*" />
    <allow-navigation href="*" />
    <allow-intent href="*" />
    
    <!-- Preferences -->
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="22" />
    <preference name="android-targetSdkVersion" value="35" />
    <preference name="Orientation" value="default" />
    <preference name="Fullscreen" value="false" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#1e3a8a" />
    <preference name="StatusBarStyle" value="lightcontent" />
    
    <!-- Android specific preferences -->
    <platform name="android">
        <preference name="android-windowSoftInputMode" value="adjustResize" />
        <preference name="AndroidPersistentFileLocation" value="Compatibility" />
        <preference name="AndroidInsecureFileModeEnabled" value="true" />
        <preference name="loadUrlTimeoutValue" value="60000" />
    </platform>
    
    <!-- Plugins -->
    <plugin name="cordova-plugin-statusbar" spec="^4.0.0" />
    <plugin name="cordova-plugin-device" spec="^2.1.0" />
    <plugin name="cordova-plugin-network-information" spec="^3.0.0" />
    
    <!-- Content Security Policy -->
    <meta http-equiv="Content-Security-Policy" content="default-src * 'unsafe-inline' 'unsafe-eval'; script-src * 'unsafe-inline' 'unsafe-eval'; style-src * 'unsafe-inline';" />
</widget>
